<view>
<view class="UserInfo" id="top_user_info">
<view class="UserInfo.Title">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>

</view>


<view class="UserInfo.Fans">

<view class="UserInfo.Fans.item" style="position:fixed;top:80px;left:80px;"
>
<view>{{concerns}}</view>
<view>关注</view>
</view>

<view class="UserInfo.Fans.item" style="position:fixed;top:80px;right:80px;">
<view>{{fans}}</view>
<view>粉丝</view>
</view>

<!-- end of UserInfo.Fans -->
</view> 
<!-- end of UserInfo.Title -->
</view>
<view style="position:relative;top:100px;">
  <block wx:for="{{me_content}}">
    <view>
    <image src="{{item.content_logo}}" stype="width=10px;height=10px"> </image>
    {{item.content_name}}
    </view>
  </block>
</view>
</view>