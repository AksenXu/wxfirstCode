/* pages/buluo/buluo.wxss */
.buluo_activity_view {
  display: flex;
  flex-direction: column;
  margin-top: 10px;
  width: 100%;
  align-self: center;
  background-color:white;
}

.buluo_activity_view_item {
  border-left: 20px;
}

.buluo_activity_view_line1 {
  display: flex;
  flex-direction: row;
  margin-top: 5px;
  margin-left: 10px;
}

.buluo_activity_view_line1_image {
  width: 80rpx;
  height: 80rpx;
}

.buluo_activity_view_line1_comment {
  display: flex;
  margin-left: 50rpx;
  flex-direction: column;
}
.buluo_activity_view_line1_user {
  display: flex;
  flex-direction: row;
  font-size: 12px;
  font-weight: 300;
}

.buluo_activity_view_line1_user_level {
  margin-left: 5px;
  width: 40px;
  height: 15px;
}
.buluo_activity_view_line1_extra {
  margin-top: 5px;
  font-size: 10px;
  font-weight: 200;
}

.buluo_activity_view_line2 {
  display: flex;
  flex-direction: row;
  font-weight: 300;
  font-size: 12px;
  margin-top: 8px;
  margin-bottom: 20px;
  margin-left: 10px;
}


