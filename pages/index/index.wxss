/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.image-group {
  display: flex;
  white-space: nowrap;
  margin-top: 30rpx;
}
.image-group image {
  display: inline-block;
  width: 375rpx;
  height: 180rpx;
  margin-right: 20rpx;
}

.search-area {
  width: 90%;
  height: 30px;
  display: flex;
  flex-direction: row;
  align-self: center;
  align-items: center;
  border:1rpx solid;
  border-color: rgb(219, 211, 211)
}

.weui-search-bar__input{
  padding-left: 30px;
  align-content: center;
  align-items: center;
  width: 90%;
  font-size: 12px;
  font-weight: 200;
}

.weui-cell__ft_in-access-pulldown{
  padding-left:13px;
  padding-right:10px;
  position:relative;  
}
.weui-cell__ft_in-access-pulldown:after{
  content:" ";
  display:inline-block;
  height:6px;
  width:6px;
  border-width:0 2px 2px 0;
  border-color:#454545;
  border-style:solid;
  -webkit-transform:matrix(.71,.71,-.71,.71,0,0);
  margin-top:-4px;
  right:2px;
  }

  .vertical-line {
    width: 3px;
    height: 60%;
    border-width: 0 1px 0 0;
    border-color: rgba(153, 141, 141, 0.836);
    border-style: solid
  }

.choose_area_button {
  padding-right: 10px;
}
  .bottom-bar-button {
    display: flex;
    flex-direction: row;
    padding-top: 10px;
    align-content: center;
    align-items: center
  }

  .all-action-text-view {
    padding-left: 20px;
    font-size: 18px;
    font-weight: 300; 
  }

  .action-filter-button {
    padding-right: 10px;
    font-size: 15px;
    margin-right: 20px;
    position: relative;
    padding-left: 40%;
    font-weight: 200; 
  }